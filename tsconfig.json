{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "~public/*": ["./public/*"]
        },
        "traceResolution": true,
        "types": ["node", "cypress"],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postCssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "include": ["cypress/**/*.ts", "cypress.config.ts", "vite.config.ts", "src"],
    "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
