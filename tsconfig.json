{
    "compilerOptions": {
        "baseUrl": ".",
        "types": ["node", "cypress"],
        "paths": {
            "@/*": ["src/*"],
            "@app/*": ["src/app/*"],
            "@query/*": ["src/query/*"],
            "@assets/*": ["src/assets/*"],
            "@store/*": ["src/store/*"]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postCssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
